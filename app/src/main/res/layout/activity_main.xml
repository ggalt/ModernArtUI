<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/black2white_gradient"
    android:focusable="false">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorSeekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:max="255" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/opacitySeekBar"
        android:max="254" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/colorSeekBar"
        android:background="@drawable/black2white_gradient"
        android:layout_below="@+id/opacitySeekBar"
        android:dividerPadding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/leftLayout"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/L1"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#d5b2b2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/L2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#878a72" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/L3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#f7061a" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/L4"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#3ad89e" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rightLayout"
            android:layout_weight="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/R1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="4"
                android:padding="10dp"
                android:background="#fbca03" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/R2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:padding="10dp"
                android:background="#e1e1e1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/R3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="4"
                android:padding="10dp"
                android:background="#70bbb3" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
